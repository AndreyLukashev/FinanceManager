<ui-loader loading="{{isLoading}}" class-name="z-1 bg-white/70"></ui-loader>

 <div class="p-1">
                <label>
                    <p class="text-gray-950 text-xl font-semibold text-center">Фильтр по категории расходов</p>
                    <select name="categories" class="categories-balance-expense p-2 w-full rounded border-2 border-slate-900 bg-cyan-500 text-gray-950 text-xl font-semibold text-center">
                        <option>{{categoryName}}</option>
                        <option>Жилье</option>
                        <option>Здоровье</option>
                        <option>Продукты</option>
                        <option>Досуг</option>
                        <option>Образование</option>
                        <option>Подарки</option>
                        <option>Транспорт</option>
                    </select>
                </label>
            </div>


            <div class="grid grid-cols-8 ">
        <div class="col-span-4 flex">
            <div class="col-span-2">
                
            </div>

            <div class="col-span-2"></div>        
        </div>

        <div class="col-span-4">
            {{#each transactions}}
                <div data-id="{{this.id}}" class="m-1 bg-indigo-200 flex relative board-item border-2 border-slate-900 rounded cursor-pointer transition-shadow hover:shadow-slate-200 hover:shadow-lg">
                    <p class="min-w-32 border-r-2 border-slate-900 p-1 font-medium">{{categories}}</p>
                    <p class="min-w-32 border-r-2 border-slate-900 p-1 font-medium">{{sum}}</p>
                    <p class="min-w-32 border-r-2 border-slate-900 p-1 font-medium">{{date}}</p>
                    <p class="p-1 font-medium">{{description}}</p>
                    <button data-id="{{this.id}}" class="delete-transaction absolute top-0 right-0 hover:text-red-500 bg-transparent rounded-lg text-lg w-8 h-8 ms-auto inline-flex justify-center items-center">
                        <div class="icon-circle-x"></div>
                    </button>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="min-w-80">
        <p>Сумма дохода по фильтру</p>
        <div class="flex max-w-80 m-1 bg-amber-100 relative board-item border-2 border-slate-900 rounded cursor-pointer transition-shadow hover:shadow-slate-200 hover:shadow-lg">
            <p class="min-w-32 border-slate-900 p-1 border-r-2">{{filterTitle}}</p>
            <p class="border-slate-900 p-1">{{filterBalance}}</p>
        </div>
        <div>
            <label class="w-full">
                <p class="text-sm text-black">Фильтр по категории расходов</p>
                <select name="categories" class="filter-balance-profit p-2 w-full border rounded">
                    <option>Выберите категорию</option>
                    <option>Зарплата</option>
                    <option>Подарки</option>
                    <option>Другое</option>
                </select>
             </label>
        </div>
    </div>

 
        
            
                
                
    


   
        
        




