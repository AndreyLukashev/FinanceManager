<form class="create-proffilter-form flex flex-col gap-3">
  <label class="w-full">
    <p class="text-sm text-black">Категория дохода</p>
    <select name="categories" class="p-2 w-full border rounded">
      <option ></option>
      <option>Зарплата</option>
      <option>Подарки</option>
      <option>Другое</option>
    </select>
  </label>

  <div class="flex justify-around">
    <label class="min-w-64">
      <p class="text-sm text-black">Начала периода</p>
      <input type="date" name="startdate" value="{{startdate}}" class="p-2 w-full border rounded" />
    </label>

    <label class="min-w-64">
      <p class="text-sm text-black">Конец периода</p>
      <input type="date" name="enddate" value="{{enddate}}" class="p-2 w-full border rounded" />
    </label>
  </div> 
</form>