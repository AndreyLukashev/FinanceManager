<ui-loader loading="{{isLoading}}" class-name="z-10 bg-white"></ui-loader>
<div>
    <app-router>
        <app-route path="${props.routes.home}" title="Home Page" component="home-page"></app-route>
        <app-route path="${props.routes.signUp}" title="Sign Up" component="sign-up-page"></app-route>
        <app-route path="${props.routes.signIn}" title="Sign In" component="sign-in-page"></app-route>
        <app-route path="${props.routes.work}" title="Work Page" component="work-page"></app-route>
        <app-route path="${props.routes.profit}/:id" title="Profit Page" component="profit-page"></app-route>
        <app-route path="${props.routes.expense}" title="Expense Page" component="expense-page"></app-route>
        <app-route path="${props.routes.notFound}" title="Not Found" component="not-found"></app-route>
        <app-outlet></app-outlet>
    </app-router>
</div>

<ui-toast></ui-toast>
