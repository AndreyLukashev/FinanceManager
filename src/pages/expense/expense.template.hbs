<div class="grid grid-cols-10 min-h-screen bg-workspace bg-cover">
  <div class="col-span-1 relative">
    <div class="px-5 mt-10">

      <div class="flex items-center gap-2">
        <img class="h-8 w-8" src="/wallet.svg" alt="" />
        <h1>EXPENSE PAGE</h1>
      </div>

      <div class="flex items-center gap-2">
        <a href="mailto:{{user.email}}" class="text-lg font-light mt-2 text-slate-500 hover:text-indigo-500">{{user.email}}</a>
      </div>

      <div>
        <button
          class="logout min-w-40 min-h-16 px-3.5 py-2.5 rounded-md mt-5 bg-red-500 hover:bg-red-400 shadow-sm text-white text-sm font-semibold"
        >ВЫХОД</button>
        <button
          class="work-page min-w-40 min-h-16 px-3.5 py-2.5 rounded-md mt-5 bg-indigo-500 hover:bg-indigo-400 shadow-sm text-white text-sm font-semibold"
        >МЕНЮ</button>
        <button
          class="profit-page min-w-40 min-h-16 px-3.5 py-2.5 rounded-md mt-5 bg-lime-500 hover:bg-lime-400 shadow-sm text-white text-sm font-semibold"
        >ДОХОДЫ</button>
        <button
          class="create-expense min-w-40 min-h-16 px-3.5 py-2.5 rounded-md mt-5 bg-teal-500 hover:bg-teal-400 shadow-sm text-white text-sm font-semibold"
        >ДОБАВИТЬ РАСХОД</button>
      </div>

    </div>
  </div>

  <div class="col-span-4">
    <ui-loader loading="{{isLoading}}" class-name="z-1 bg-white/70"></ui-loader>

        <ui-total-balance></ui-total-balance>

        <button
      class="filter min-w-40 min-h-16 px-3.5 py-2.5 rounded-md mt-5 bg-emerald-500 hover:bg-emerald-400 shadow-sm text-white text-sm font-semibold"
    >Filter</button>

     <label class="w-full">
      <p class="text-sm text-black">Фильтр по категории расходов</p>
      <select
        name="categories"
        class="filter-categories p-2 w-full border rounded"
        <option></option>
        <option>Жилье</option>
        <option>Здоровье</option>
        <option>Продукты</option>
        <option>Досуг</option>
        <option>Образование</option>
        <option>Подарки</option>
        <option>Транспорт</option>
      </select>
    </label>
    
  </div>

  <div class="col-span-5">
    {{#each transactions}}
      <div
        data-id="{{this.id}}"
        class="m-1 bg-slate-300 flex relative board-item border-2 border-slate-900 rounded cursor-pointer transition-shadow hover:shadow-slate-200 hover:shadow-lg"
      >
        <p class="min-w-32 border-r-2 border-slate-900 p-1">{{categories}}</p>
        <p class="min-w-32 border-r-2 border-slate-900 p-1">{{sum}}</p>
        <p class="min-w-32 border-r-2 border-slate-900 p-1">{{date}}</p>
        <p class="p-1">{{description}}</p>
        <button
          data-id="{{this.id}}"
          class="delete-transaction absolute top-0 right-0 hover:text-red-500 bg-transparent rounded-lg text-lg w-8 h-8 ms-auto inline-flex justify-center items-center"
        >
          <div class="icon-circle-x"></div>
        </button>
        <div class="p-4 line-clamp-1">{{this.title}}</div>
      </div>
    {{/each}}
  </div>

</div>